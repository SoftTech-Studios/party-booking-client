@page "/contact"

<PageTitle>Contact Us</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Contact Us</MudText>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Email" /> Email Address
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Center">contact@playlandpavilion.co.uk</MudText>
            </MudItem>
            <MudItem xs="12" class="mt-2">
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Phone" /> Phone Number
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Center">+44 20 7946 0958</MudText>
            </MudItem>
            <MudItem xs="12" class="mt-2">
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <MudIcon Icon="@Icons.Material.Filled.LocationOn" /> Address
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Center">123 Fun Street, London, UK, WC2N 5DU</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

